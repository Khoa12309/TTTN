@model IEnumerable<DataTTTN.Models.Product_details>
@{
    ViewData["Title"] = "ProductView";
    Layout = "~/Views/Shared/_Layout.cshtml";
     string p;
}

<div class="glasses">
    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="titlepage">
                    <h2>Our Glasses</h2>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labor
                        e et dolore magna aliqua. Ut enim ad minim veniam, qui
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            @{
                foreach (var item in Model)
                {

                    foreach (var pro in ViewBag.Product)
                    {
                        List<Guid> a = new List<Guid>();
                        List<Guid> b = new List<Guid>();
                        if (a.Exists(i => i == pro.Id))
                        {
                            continue;
                        }
                        if (pro.Id==item.Id_Product)
                        {
                            a.Add(pro.Id);
                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                            <div class="glasses_box">
                            @foreach (var img in ViewBag.Img)
                            {
                                        if (b.Exists(i => i == item.Id))
                                        {
                                            continue;
                                        }
                                        if (item.Id_Product == img.Id_Product_details)
                                        {
                                            b.Add(item.Id);
                                            <figure><img src="~/images/@img.Name" alt="#" /></figure>
                                        }
                                          
                                               
                            }
                                    <h3><span class="blu">$</span>@item.Price</h3>
                                    <p>@pro.Name</p>
                                    <a class="read_more" href="@Url.Action("AddToCart","Cart",new {id=item.Id,soluong=1})">Add to cart</a>
                                </div>

                            </div>
                        }         
                    }
                }
            }
            <div class="col-md-12">
                <a class="read_more" href="#">Read More</a>
            </div>
           
        </div>
    </div>
</div>
<script src="~/js/jquery.min.js"></script>
